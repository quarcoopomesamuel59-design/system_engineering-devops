#!/bin/bash
#!/usr/bin/env bash
# This script checks the properties of a file named "school" and prints messages based on its state:
# - Whether the file exists
# - Whether the file is empty or not
# - Whether the file is a regular file

# Check if the "school" file exists
if [ -e school ]; then
    echo "school file exists"

    # Check if the file is empty
    if [ ! -s school ]; then
        echo "school file is empty"
    else
        echo "school file is not empty"
    fi

    # Check if the file is a regular file (not a directory, symbolic link, etc.)
    if [ -f school ]; then
        echo "school is a regular file"
    fi
else
    # File does not exist
    echo "school file does not exist"
fi
