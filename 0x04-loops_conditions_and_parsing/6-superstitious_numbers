#!/bin/bash
#!/usr/bin/env bash
# This script loops from 1 to 20 and prints each number.
# For specific numbers, it also prints a "bad luck" message based on different cultures:
# - 4: "bad luck from China"
# - 9: "bad luck from Japan"
# - 17: "bad luck from Italy"

# Initialize the counter variable
counter=1

# Start a while loop that runs as long as counter is less than or equal to 20
while [ $counter -le 20 ]; do
    # Print the current number
    echo $counter

    # Use a case statement to handle special "bad luck" numbers
    case $counter in
        4)
            echo "bad luck from China"
            ;;
        9)
            echo "bad luck from Japan"
            ;;
        17)
            echo "bad luck from Italy"
            ;;
        # Default case does nothing extra
        *)
            ;;
    esac

    # Increment the counter by 1
    ((counter++))
done
